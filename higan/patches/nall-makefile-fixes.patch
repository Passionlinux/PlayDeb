Description: nall/Makefile fixes

* Use the flags from CFLAGS, CPPFLAGS and LDFLAGS. They are set in the rules file.

Author: Tobias Hansen <thansen@debian.org>

Index: higan-098/nall/GNUmakefile
===================================================================
--- higan-098.orig/nall/GNUmakefile	2016-01-24 13:42:50.000000000 +0100
+++ higan-098/nall/GNUmakefile	2016-05-26 18:47:55.995064843 +0200
@@ -36,12 +36,12 @@
   endif
 endif
 
-cflags := -x c -std=c99
+cflags := -x c -std=c99  $(CFLAGS) $(CPPFLAGS)
 objcflags := -x objective-c -std=c99
-cppflags := -x c++ -std=c++14
+cppflags := -x c++ -std=c++14 $(CFLAGS) $(CPPFLAGS)
 objcppflags := -x objective-c++ -std=c++14
 flags :=
-link :=
+link := $(LDFLAGS)
 
 # compiler detection
 ifeq ($(compiler),)
@@ -51,7 +51,7 @@
   else ifeq ($(platform),macosx)
     compiler := clang++
   else ifeq ($(platform),linux)
-    compiler := g++-4.9
+    compiler := g++
   else ifeq ($(platform),bsd)
     compiler := g++49
   else

Description: nall/Makefile fixes

* Use the flags from CFLAGS, CPPFLAGS and LDFLAGS. They are set in the rules file.

Author: Tobias Hansen <thansen@debian.org>

Index: higan-102/nall/GNUmakefile
===================================================================
--- higan-102.orig/nall/GNUmakefile	2017-01-19 18:05:20.297351647 +0100
+++ higan-102/nall/GNUmakefile	2017-01-19 18:07:11.086898664 +0100
@@ -36,12 +36,12 @@
   endif
 endif
 
-cflags := -x c -std=c11
+cflags := -x c -std=c11  $(CFLAGS) $(CPPFLAGS)
 objcflags := -x objective-c -std=c11
-cppflags := -x c++ -std=c++14
+cppflags := -x c++ -std=c++14  $(CFLAGS) $(CPPFLAGS)
 objcppflags := -x objective-c++ -std=c++14
 flags :=
-link :=
+link := $(LDFLAGS)
 
 # compiler detection
 ifeq ($(compiler),)
@@ -51,7 +51,7 @@
   else ifeq ($(platform),macosx)
     compiler := clang++
   else ifeq ($(platform),linux)
-    compiler := g++-4.9
+    compiler := g++
   else ifeq ($(platform),bsd)
     compiler := g++49
   else

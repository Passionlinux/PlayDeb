#!/usr/bin/make -f
version=2.3
major=1
%:
	dh $@

override_dh_clean:
	dh_clean
	rm -rfv obj-x86_64-linux-gnu

override_dh_auto_install:
	dh_auto_install
	find $(CURDIR)/debian/tmp -name Win32 -o -name OSX -print | xargs /bin/rm -rf
	rm -fv $(CURDIR)/debian/tmp/usr/share/SFML/license.txt

override_dh_install:
	dh_install --list-missing

override_dh_strip:
	dh_strip --dbg-package=libsfml$(version)-dbg

